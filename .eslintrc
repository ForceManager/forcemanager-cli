{
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "rules": {
    "curly": 0,
    "comma-dangle": [2, "always-multiline"],
    "comma-spacing": 0,
    "eqeqeq": [2, "allow-null"],
    "key-spacing": 0,
    "no-underscore-dangle": 0,
    "no-unused-expressions": 0,
    "no-shadow": 0,
    "no-shadow-restricted-names": 0,
    "no-extend-native": 0,
    "no-var": 2,
    "new-cap": 0,
    "quotes": 0,
    "semi-spacing": 0,
    "space-unary-ops": 0,
    "space-infix-ops": 0,
    "consistent-return": 0,
    "strict": 0,
    "indent": ["warn", 4, { "SwitchCase": 1 }],
    "react/prefer-es6-class": 1,
    "react/prefer-stateless-function": 1,
    //"react/no-children-prop": 1,
    "react/no-did-mount-set-state": 0,                // for optimize web
    "react/no-did-update-set-state": 0,               // for optimize web
    //"react/no-will-update-set-state": 1,
    "react/no-direct-mutation-state": 1,
    //"react/no-redundant-should-component-update": 1,
    "react/no-typos": 0,
    "react/react-in-jsx-scope": 0,                    // activate when react will be > 16
    "react/jsx-closing-bracket-location": 0,
    "react/jsx-closing-tag-location": 0,
    "react/jsx-indent": 0,                            // activate the day when all developers use a stable IDE
    "react/jsx-indent-props": 0,                      // activate the day when all developers use a stable IDE
    "react/jsx-no-bind": 0,
    "react/jsx-no-duplicate-props": 1
  },
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ]
}
